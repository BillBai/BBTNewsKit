<%= form_for @publisher do |f| %>

    <% if @publisher.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@publisher.errors.count, "error") %>
            prohibited
            this article from being saved:</h2>
          <ul>
            <% @publisher.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label t :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>