<h1> all publishers </h1>
<%= link_to new_publisher_path, {role: 'button', class: 'btn btn-primary'} do%>
  <span class="glyphicon glyphicon-plus"></span> New publisher
<% end %>
&nbsp
<%= link_to "back", contents_path ,{role: 'button', class: 'btn btn-default'}%>

<table class="table table-striped">
  <thead>
  <tr>
    <th>id</th>
    <th>name</th>
  </tr>
  </thead>
  <tbody>
    <% @publishers.each do |publisher| %>
        <tr>
          <td><%= publisher.id %></td>
          <td><%= publisher.name %></td>

          <td><%= link_to 'Show', publisher_path(publisher), {role: 'button', class: 'btn btn-info'}%>
          <%= link_to 'Edit', edit_publisher_path(publisher), {role: 'button', class: 'btn btn-warning'}%>
          <%= link_to 'Delete', {url:  publisher_path(publisher), method: :delete, 
            data: { confirm: 'Are you sure?'}},
            {role: 'button', class: 'btn btn-danger'} %></td>
        </tr>
    <% end %>
  </tbody>
</table>