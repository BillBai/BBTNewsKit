<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role:"form" }) do |f| %>
  <%= devise_error_messages! %>
  <h2><%= t :sign_up %></h2>
  <div class="col-xs-3">
    <div class="field">
      <%= f.label t :email %><br />
      <label>
        <%= f.email_field :email,
          {autofocus: true, class:"form-control" }%>
      </label>
    </div>

    <div class="field">
      <%= f.label t :display_name %><br />
      <label>
        <%= f.text_field :display_name,
          {autofocus: "off", class:"form-control" }%>
      </label>
    </div>

    <div class="field">
      <%= f.label t :password %>
      <% if @validatable %>
      <em>(<%= t :minimum_length %> : <%= @minimum_password_length %>)</em>
      <% end %><br />
      <label>
        <%= f.password_field :password,
          {autofocus: "off", class:"form-control" }%>
      </label>
    </div>

    <div class="field">
      <%= f.label t :password_confirmation %><br />
      <label>
        <%= f.password_field :password_confirmation,
          {autofocus: "off", class:"form-control" }%>
      </label>
    </div>

    <div class="actions">
      <%= f.submit t :sign_up ,{class: "btn btn-default"}%>
    </div>
    </br>
    <%= render "users/shared/links" %>
  </div>
<% end %>
