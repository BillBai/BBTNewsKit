<%= link_to t("back"), :contents , {class: "btn btn-default"}%>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <h2><%= t :edit_user %></h2>
  <div class="col-xs-10">
    <div class="field">
      <%= f.label t :email %><br />
      <label>
        <%= f.email_field :email,
          {autofocus: true, class:"form-control" }%>
      </label>
    </div>

    <div class="field">
      <%= f.label t :name %><br />
      <label>
        <%= f.text_field :display_name,
          {autofocus: "off", class:"form-control", 
          value: current_user.display_name}%>
      </label>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label t :password %> <i>(<%= t :leave_blank_message %>)</i><br />
      <label>
        <%= f.password_field :password,
          {autofocus: "off", class:"form-control" }%>
      </label>
    </div>

    <div class="field">
      <%= f.label t :password_confirmation %><br />
      <label>
        <%= f.password_field :password_confirmation,
          {autofocus: "off", class:"form-control" }%>
      </label>
    </div>

    <div class="field">
      <%= f.label t :current_password %> <i>(<%= t :need_password %>)</i><br />
      <label>
        <%= f.password_field :current_password,
          {autofocus: "off", class:"form-control" }%>
      </label>
    </div>

    <div class="actions">
      <%= f.submit t("update"), {class: "btn btn-primary"}%>
    </div>

    <h2><%= f.label t :dangours_action %></h2>
      <%= button_to t("cancel_my_account"), registration_path(resource_name), 
        {data: { confirm: "Are you sure?" }, method: :delete, 
        class: "btn btn-danger"}%>
    </p>
  </div>
<% end %>